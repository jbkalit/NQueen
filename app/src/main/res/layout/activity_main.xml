<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bokvlt.nqueen.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:scaleType="fitXY"
            android:src="@drawable/board"/>

        <ImageView
            android:id="@+id/queen0"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>

        <ImageView
            android:id="@+id/queen1"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="38sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>

        <ImageView
            android:id="@+id/queen2"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="76sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>

        <ImageView
            android:id="@+id/queen3"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="114sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>

        <ImageView
            android:id="@+id/queen4"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="152sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>

        <ImageView
            android:id="@+id/queen5"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="190sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>

        <ImageView
            android:id="@+id/queen6"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="228sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>

        <ImageView
            android:id="@+id/queen7"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="266sp"
            android:layout_marginTop="0sp"
            android:src="@drawable/queens"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnBacktracking8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnBacktracking4"
            android:layout_alignBottom="@+id/btnBacktracking4"
            android:layout_toEndOf="@+id/btnBacktracking4"
            android:layout_toRightOf="@+id/btnBacktracking4"
            android:text="BT n 8"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="260dp" />

        <Button
            android:id="@+id/btnBacktracking4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="207dp"
            android:text="BT n 4"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="184dp" />

        <Button
        android:id="@+id/btnForwardChecking8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FC n 8"
        android:textAllCaps="false"
        tools:layout_editor_absoluteY="260dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_alignBaseline="@+id/btnBacktracking8"
        android:layout_alignBottom="@+id/btnBacktracking8"
        android:layout_toRightOf="@+id/btnBacktracking8"
        android:layout_toEndOf="@+id/btnBacktracking8" />

    <Button
        android:id="@+id/btnGenetic8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AG n 8"
        android:textAllCaps="false"
        tools:layout_editor_absoluteY="260dp"
        tools:layout_editor_absoluteX="280dp"
        android:layout_alignBaseline="@+id/btnForwardChecking8"
        android:layout_alignBottom="@+id/btnForwardChecking8"
        android:layout_toRightOf="@+id/btnForwardChecking8"
        android:layout_toEndOf="@+id/btnForwardChecking8" />

    </LinearLayout>

</LinearLayout>
